<%# app/views/journeys/new.html.erb %>
<div class='container d-flex justify-content-center align-items-center text-center' style="min-height: 100vh;">
  <div class='row'>
    <div class='col'>
      <div class="questionnaire-page">
        <!-- Retour (icône flèche) -->
        <div class="back-button">
          <%= link_to "←", home_path, class: "back-link" %>
        </div>

        <!-- Titre principal -->
        <div class="header text-center">
          <h1>Explorons ensemble <br> tes <span class="highlight">craintes en vol</span> 😊</h1>
        </div>

        <!-- Image d'illustration -->
        <div class="illustration">
          <img src="/assets/plane_illustration.jpg" alt="Illustration de vol en avion" />
        </div>

        <!-- Texte explicatif -->
        <div class="instructions">
          <p>Aide nous à mieux <span class="highlight">personnaliser</span> le contenu de <span class="highlight">ton programme</span></p>
        </div>

        <!-- Formulaire -->
        <%= simple_form_for @journey do |f| %>
          <%= f.association :fears, as: :check_boxes, include_blank: false, include_hidden: false %>
          <%= f.submit "Soumettre", class: "btn btn-primary mt-4" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
