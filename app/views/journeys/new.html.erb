<div class="container">
  <!-- Header -->
  <div class="header">
    <a href="#" class="back-button">←</a>
    <h1>Explorons d'abord <br> tes <span class="highlight">craintes en vol</span> 😊</h1>
    <div class="user-icon">👤</div>
  </div>

  <!-- Image -->
  <div class="d-flex flex-column align-items-center mb-5 pb-4">
    <%= image_tag("home/journey-image.png", alt: "Image descriptive", class: "main-image") %>

    <!-- Description -->
    <p class="description-text pt-4">
  Ceci nous aidera à  <span class="highlight">personnaliser</span>  <br> le contenu de <span class="highlight">ton programme</span>.
</p>

    <!-- Formulaire -->
    <%= simple_form_for @journey do |form| %>
      <%= form.input :fears,
                      as: :check_boxes,
                      collection_wrapper_tag: 'div',
                      collection_wrapper_class: 'category-wrapper',
                      item_wrapper_class: 'category-item',
                      input_html: {class: 'category-selector'},
                      collection: ["J'ai peur de l'accident", "J'ai peur de paniquer", "J'ai peur de l'enfermement", "J'ai peur de l'altitude"]  %>
      <%= form.submit "Soumettre", class: "btn" %>
    <% end %>
  </div>
</div>
