<div class="container" data-controller="bar-animation">
  <!-- Vue principale -->
  <div class="main-view">
    <h1>Relaxation en vol</h1>

    <!-- Liste des modes -->
    <div class="modes-container">
      <button class="mode-button" data-inspiration="4" data-expiration="6">Décollage</button>
      <button class="mode-button" data-inspiration="5" data-expiration="7">Turbulences</button>
      <button class="mode-button" data-inspiration="6" data-expiration="6">Croisière</button>
      <button class="mode-button" data-inspiration="3" data-expiration="5">Atterrissage</button>
    </div>

    <!-- Barre de respiration (présente dans la vue principale) -->
    <div class="breath-bar">
      <div class="bubble"></div>
    </div>

    <!-- Bouton pour démarrer -->
    <button class="start-session" disabled>Commencer la séance</button>
  </div>

  <!-- Vue de focus -->
  <div class="focus-view hidden">
    <div class="breath-bar">
      <div class="bubble"></div>
    </div>
    <button class="exit-session">Terminer</button>
  </div>
</div>
